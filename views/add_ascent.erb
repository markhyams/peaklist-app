
<div class="row">
  <div class="col-md-2">
    <h5>Adding:</h5>
    <p><strong><%= @peak.name %></strong>: <%= @peak.elevation_str %> ft</p>
    <p><%= @peak.county %> county, <%= @peak.state %></p>
  </div>
  <div class="col-md-4">
    <form action="/ascents/add_ascent/<%= @peak.id %>" method="post">
      <div class="form-group">
        <label for="date">Date climbed: </label>
        <input id="date" class="form-control" type="date" name="date" >
      </div>
      <div class="form-group">
        <label for="note">Enter any comments, memories or notes (optional):</label>
        <textarea rows="6" class="form-control" name="note" id="note"></textarea>
      </div>
      <button type="submit" class="btn btn-outline-secondary">Log Ascent</button>
      <a class="btn btn-outline-secondary" href="/cancel_save">Cancel</a>
    </form>
  </div>
  <div class="col-md-6">
    
  </div>
</div>

<script>
  var today = new Date();
  var dd = String(today.getDate()).padStart(2, '0');
  var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
  var yyyy = today.getFullYear();
  
  today = yyyy + '-' + mm + '-' + dd;
  // today = mm + '/' + dd + '/' + yyyy;
  console.log(today);

  var dateControl = document.querySelector('input[type="date"]');
  dateControl.value = today;
</script>
