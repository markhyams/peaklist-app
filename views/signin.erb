<div class="row">
  <div class="col-md-2">
    <p>Enter your username and password.</p>
  </div>
  <div class="col-md-4">
    <form action="/users/signin" method="post">
      <div class="form-group">
        <label for="username">Username:</label>
        <input id="username" class="form-control" type="text" name="username" value="<%= params[:username] %>" placeholder="Enter username" >
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input id="password" class="form-control" type="password" name="password" placeholder="Enter password" >
      </div>
      <button type="submit" class="btn btn-outline-secondary">Sign In</button>
    </form>
  </div>
  <div class="col-md-6">
    
  </div>
</div>